<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" method="upgrade">
	<name>JJ Fake Registered Users</name>
	<author>JoomJunk</author>
	<creationDate>30th Nov 2011</creationDate>
	<copyright>Copyright (C) 2011 - 2015 JoomJunk</copyright>
	<authorEmail>admin@joomjunk.co.uk</authorEmail>
	<authorUrl>http://www.joomjunk.co.uk</authorUrl>
	<version>1.0.3</version>
	<license>http://www.gnu.org/licenses/gpl-3.0.html</license>
	<description>JJFAKEREGISTEREDUSERSDESC</description>
	
	<files>
		<filename module="mod_fake_registered_users">mod_fake_registered_users.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
	</files>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_fake_registered_users.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_fake_registered_users.ini</language>
    </languages>
	
	<updateservers>
		<server type="extension" name="JJ Fake Registered Users" priority="1">http://www.joomjunk.co.uk/updates/fakeregisteredusers_update.xml</server>
	</updateservers>
	
	<config>
		<fields name="params">
		<fieldset name="basic" label="Basic">
			<field name="@spacer" type="spacer" default="&lt;div id=&quot;image_1&quot;  style=&quot;font-weight:normal;font-size:12px;color:#fff;padding:4px;margin:0;background:#666;&quot;&gt;Show fake or real amount?&lt;/div&gt;" label="" description="" />
			<field name="reguser" type="radio" default="1" label="REGISTEREDUSERS" description="REGISTEREDUSERSDESC">
				<option value="1">FAKE</option>
				<option value="0">REAL</option>
			</field>
		
			<field name="@spacer2" type="spacer" default="&lt;div id=&quot;image_1&quot;  style=&quot;font-weight:normal;font-size:12px;color:#fff;padding:4px;margin:0;background:#666;&quot;&gt;If you selected 'Fake', please type in a number below, which will be added on to the real amount of registered users&lt;/div&gt;" label="" description="" />
		
			<field name="increase" type="text" default="100" label="INCREASEBY" description="INCREASEBYDESC" />
		
			<field name="displaytitle" type="text" size="30" default="Registered Users:" label="REGLABEL" description="REGLABELDESC" />
		
			<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="fieldMODULECLASSSUFFIX" />	
		</fieldset>
		</fields>
	</config>

</extension>
